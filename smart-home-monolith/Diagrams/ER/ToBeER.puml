@startuml
title Умный Дом ER Diagram

top to bottom direction

!includeurl https://raw.githubusercontent.com/RicardoNiepel/C4-PlantUML/master/C4_Component.puml

class User {
  +String name
  +String email
}

class Admin {
  +String name
  +String email
  +String security_token_id
}

class Security_token{
  +String security_token_id
  +String expire_date
}

class Specialist{
  +String name
  +String email
}

class House {
  +String adress
  +String house_ID
}

class IoTDevice {
  +String Device_ID
  +String type_ID
  +String house_ID
  +String serial_number
  +Boolean status
}

class Devicetype {
  +String type_ID
  +String BasicInformation
}

Class TelemetryData{
  +Date date
  +String Device_ID
  +String incident_type
  +String incident_info
  +String incident_id
}

Class Notification {
  +String incident_type
  +String incident_id
  +String email
}

Class Module {
  +String Module_ID
  +String Device_ID
  +Boolean status
}



User "1" -- "0..*" House : has
User "1" -- "0..*" IoTDevice : has
User "1" -- "0..*" Notification: has
House "1" -- "0..*" IoTDevice : includes
IoTDevice "1" -- "0..*" Module : includes
IoTDevice "1" -- "1" Devicetype : has
IoTDevice "1" -- "0..*" TelemetryData : includes

Admin "1" -- "1" Security_token : has
Admin "1" -- "0..*" Notification: has
Specialist "1" -- "1" Security_token : has

@enduml